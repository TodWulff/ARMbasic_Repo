#ifndef ARMbasic_Debug_Tools
#define ARMbasic_Debug_Tools

DIM DEBUG$(255)

' PRINT_BITS_LONG_BINARY:
	' FOR PRINT_BITS_LOOP = 31 DOWNTO 0
		' PRINT bittest(LONG_TO_PRINT,PRINT_BITS_LOOP);
	' NEXT PRINT_BITS_LOOP
